<?xml version="1.0"?>
<layout>
    <!-- Add ability to tag order -->
    <adminhtml_sales_order_view>
        <!-- Add required JS and CSS -->
        <reference name="head">
            <action method="addCss"><name>wfn_tagger/selectize/selectize.css</name></action>
            <action method="addJs"><script>wfn_tagger/jquery/jquery-3.1.1.min.no-conflict.js</script></action>
            <action method="addJs"><script>wfn_tagger/selectize/selectize.min.js</script></action>
            <action method="addJs"><script>wfn_tagger/main.js</script></action>
        </reference>
        <!-- Add "Tags" tab -->
        <reference name="sales_order_tabs">
            <action method="addTab">
                <name>order_tab_wfn_tagger</name>
                <block>wfn_tagger/adminhtml_orderViewTagsTab</block>
            </action>
        </reference>
    </adminhtml_sales_order_view>

    <!-- Add ability to tag customer -->
    <adminhtml_customer_edit>
        <!-- Add required JS and CSS -->
        <reference name="head">
            <action method="addJs"><script>wfn_tagger/jquery/jquery-3.1.1.min.no-conflict.js</script></action>
            <action method="addJs"><script>wfn_tagger/selectize/selectize.min.js</script></action>
            <action method="addCss"><name>wfn_tagger/selectize/selectize.css</name></action>
        </reference>
        <!-- Add "Tags" tab -->
        <reference name="customer_edit_tabs">
            <action method="addTab">
                <name>order_tab_wfn_tagger</name>
                <block>wfn_tagger/adminhtml_customerViewTagsTab</block>
            </action>
        </reference>
    </adminhtml_customer_edit>
</layout>
